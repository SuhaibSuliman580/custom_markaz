<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_membership_renewal_wizard_form" model="ir.ui.view">
        <field name="name">membership.renewal.wizard.form</field>
        <field name="model">membership.renewal.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Renewal Invoice">
                <group>
                    <field name="period_id" invisible="1"/>
                    <!-- Odoo requires any field used in a domain (even on python fields) to be present in the view -->
                    <field name="allowed_renewal_product_ids" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="product_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Create Invoice" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
