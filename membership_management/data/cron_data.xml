<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="cron_membership_expiration_check" model="ir.cron">
            <field name="name">Membership: Check Expiration and Send Reminders</field>
            <field name="model_id" ref="model_membership_period"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_membership_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Fallback: activate paid memberships that were missed -->
        <record id="cron_activate_paid_memberships" model="ir.cron">
            <field name="name">Membership: Activate Paid Memberships (Fallback)</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">model._cron_activate_paid_memberships()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
