<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_membership_management" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.membership.management</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Doctor Membership" string="Doctor Membership">
                    <h2>Doctor Membership</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="membership_initial_product_id"/>
                                <div class="text-muted">Product used for the initial membership (application / first subscription).</div>
                                <field name="membership_initial_product_id" options="{'no_create': True}"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="membership_renewal_product_ids"/>
                                <div class="text-muted">Products available to employees when creating renewal invoices.</div>
                                <field name="membership_renewal_product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
