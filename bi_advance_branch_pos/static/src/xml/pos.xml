<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="bi_advance_branch_pos.ReceiptHeader" t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension" owl="1">
		<xpath expr="//div[hasclass('branch')]" t-operation="after">
			<t t-if="env.services.pos.pos_session.address">
				<div>Branch Address:
					<t t-esc="env.services.pos.pos_session.address"/>
				</div>
			</t>
		</xpath>

		<xpath expr="//img[hasclass('pos-receipt-logo')]" t-operation="replace">
			<t t-if="env.services.pos.pos_session.logo">
				<t t-esc="env.services.pos.pos_session.logo"/>
				<img class="pos-receipt-logo" t-att-src="'data:image/png;base64,'+ env.services.pos.pos_session.logo" style="max-height: 1cm; max-width: 4cm;"/>
			</t>
		</xpath>
	</t> 

</templates>
