<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="hr_department_form_inherit" model="ir.ui.view">
		<field name="name">hr.department.form.inherit</field>
		<field name="model">hr.department</field>
		<field name="inherit_id" ref="hr.view_department_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet/group[1]" position="after">
				<separator name="payroll" string="Payroll" />
				<div name="department_register_partner_ids">
					<label for="department_register_partner_ids" />
					<field name="department_register_partner_ids" >
						<form>
							<group>
								<field name="department_id" readonly="1" />
								<field name="contribution_register_id" />
								<field name="partner_id" />
							</group>
						</form>
					</field>
				</div>
			</xpath>
		</field>
	</record>

	<record id="action_hr_department" model="ir.actions.act_window">
		<field name="name">Departments</field>
		<field name="res_model">hr.department</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_hr_department" name="Departments"
		parent="menu_hr_payroll_configuration_work_entry"
		action="action_hr_department" sequence="40" />
</odoo>
