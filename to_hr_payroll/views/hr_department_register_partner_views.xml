<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="hr_department_register_partner_view_tree" model="ir.ui.view">
		<field name="name">hr.department.register.partner.tree</field>
		<field name="model">hr.department.register.partner</field>
		<field name="arch" type="xml">
			<tree string="Department and Contribution Register Partner Map" sample="1">
				<field name="contribution_register_id" />
				<field name="department_id" />
				<field name="partner_id"/>
			</tree>
		</field>
	</record>

	<record id="hr_department_register_partner_view_form" model="ir.ui.view">
		<field name="name">hr.department.register.partner.form</field>
		<field name="model">hr.department.register.partner</field>
		<field name="arch" type="xml">
			<form string="Department and Contribution Register Partner Map">
				<sheet>
					<group>
						<field name="contribution_register_id" />
						<field name="department_id" />
						<field name="partner_id"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

</odoo>
