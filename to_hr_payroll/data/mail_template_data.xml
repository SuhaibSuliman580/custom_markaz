<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">

		<!--Email template -->
		<record id="email_template_payslip" model="mail.template">
			<field name="name">Payslip - Send by Email</field>
			<field name="email_from">{{user.email_formatted}}</field>
			<field name="partner_to">{{object.employee_partner_id.id}}</field>
			<field name="subject">{{object.name or 'n/a' }} // {{object.company_id.name}}</field>
			<field name="model_id" ref="to_hr_payroll.model_hr_payslip" />
			<field name="auto_delete" eval="True" />
			<field name="report_template_ids" eval="[(4, ref('to_hr_payroll.action_report_payslip'))]"/>
			<field name="lang">{{object.employee_lang}}</field>
			<field name="body_html"><![CDATA[
<p>Dear <t t-out="object.employee_id.name"/>,</p>
<br />
<p>
Please find attached payslip with reference: <strong><t t-out="object.name"/></strong>
from <t t-out="object.company_id.display_name"/>.
</p>
<p>Please don't hesitate to reply this email if should you have any questions.</p>
<br />
<p>Yours Sincerely,</p>
]]></field>
		</record>

		<record id="email_template_payslipbatch" model="mail.template">
			<field name="name">Payslip Batch - Send by Email</field>
			<field name="email_from">{{user.email_formatted}}</field>
			<field name="subject">(Ref {{object.name or 'n/a' }}) // {{user.company_id.name}}</field>
			<field name="model_id" ref="to_hr_payroll.model_hr_payslip_run" />
			<field name="auto_delete" eval="True" />
			<field name="report_template_ids" eval="[(4, ref('to_hr_payroll.payslip_batch_report'))]"/>
			<field name="lang">{{user.lang}}</field>
			<field name="body_html"><![CDATA[
<p>Hello,</p>
<br />
<p>
Here is attaching <t t-out="doc_name"/> <strong t-out="object.name"/>
from <t t-out="user.company_id.name"/>.
</p>
<p>Please don't hesitate to reply to this email if you have any questions.</p>
<p>Thank you,</p>
]]></field>
		</record>
	</data>
</odoo>
