<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_membership_period_form" model="ir.ui.view">
        <field name="name">membership.period.form</field>
        <field name="model">membership.period</field>
        <field name="arch" type="xml">
            <form string="Membership Period">
                <header>
                    <button name="action_create_renewal_invoice" string="Create Renewal Invoice"
                            type="object" class="btn-primary"
                            invisible="state != 'active'"
                            groups="membership_management.group_membership_officer"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="application_id"/>
                        </group>
                        <group>
                            <field name="period_type"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>
                    <group string="Billing" groups="membership_management.group_membership_officer">
                        <field name="product_id" options="{'no_create': True}"
                               modifiers='{"invisible": [["period_type", "=", "initial"]], "required": [["period_type", "=", "renewal"]]}'/>
                    </group>
                    <group string="QR Code">
                        <field name="qr_code" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- tree View -->
    <record id="view_membership_period_list" model="ir.ui.view">
        <field name="name">membership.period.tree</field>
        <field name="model">membership.period</field>
        <field name="arch" type="xml">
            <tree string="Membership Periods"
                  decoration-success="state == 'active'"
                  decoration-danger="state == 'expired'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="period_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_membership_period_search" model="ir.ui.view">
        <field name="name">membership.period.search</field>
        <field name="model">membership.period</field>
        <field name="arch" type="xml">
            <search string="Search Memberships">
                <field name="name"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Doctor" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_membership_period" model="ir.actions.act_window">
        <field name="name">Membership Periods</field>
        <field name="res_model">membership.period</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_membership_period_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No membership periods yet.
            </p>
        </field>
    </record>

</odoo>