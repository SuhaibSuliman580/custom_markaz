<odoo>
	<record id="view_hr_payslip_form" model="ir.ui.view">
		<field name="name">payslip.form</field>
		<field name="model">hr.payslip</field>
		<field name="inherit_id" ref="to_hr_payroll.view_hr_payslip_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='worked_days_line_ids_help']" position="after">
				<separator string="Meal Order"/>
				<field name="meal_order_line_ids" nolabel="1">
					<tree name="meal_order_line_ids">
						<field name="meal_date" />
						<field name="quantity" sum="Total" />
						<field name="total_price" />
						<field name="employee_amount" sum="Total"/>
						<field name="state"/>
						<field name="currency_id" column_invisible="1"/>
					</tree>
				</field>
			</xpath>
		</field>
	</record>
</odoo>
