<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_membership" model="ir.module.category">
            <field name="name">Membership</field>
            <field name="sequence">50</field>
        </record>

        <record id="group_membership_officer" model="res.groups">
            <field name="name">Membership Officer</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="comment">Can manage membership applications and view memberships.</field>
        </record>

        <record id="group_membership_admin" model="res.groups">
            <field name="name">Membership Admin</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_officer'))]"/>
            <field name="comment">Full access to all membership management features.</field>
        </record>

    </data>

    <data noupdate="1">
        <!-- Application: Portal users can read their own applications -->
        <record id="rule_application_portal_user" model="ir.rule">
            <field name="name">Membership Application: Portal User Own</field>
            <field name="model_id" ref="model_membership_application"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Period: Portal users can read their own periods -->
        <record id="rule_period_portal_user" model="ir.rule">
            <field name="name">Membership Period: Portal User Own</field>
            <field name="model_id" ref="model_membership_period"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Officer: Full access to applications and read on periods -->
        <record id="rule_application_officer" model="ir.rule">
            <field name="name">Membership Application: Officer</field>
            <field name="model_id" ref="model_membership_application"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_officer'))]"/>
        </record>

        <record id="rule_period_officer" model="ir.rule">
            <field name="name">Membership Period: Officer</field>
            <field name="model_id" ref="model_membership_period"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_officer'))]"/>
        </record>

    </data>
</odoo>
